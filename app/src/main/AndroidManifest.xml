<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitpolarity.spotifytestapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sigmotitle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sigmotitle"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpotifyTestApp"
        android:hardwareAccelerated="true"
        >
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Bottom_Nav_Files.MainHolder"/>
        <activity android:name=".MainActivity" />

        <service android:name=".OnClearFromRecentService" />


        <receiver
            android:name=".broadcaster"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.spotify.music.playbackstatechanged" />
                <action android:name="com.spotify.music.metadatachanged" />
                <action android:name="com.spotify.music.queuechanged" />
            </intent-filter>
        </receiver>

        <service android:name=".OnClearFromRecentService"/>


    </application>

</manifest>