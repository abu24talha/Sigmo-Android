<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="2dp"
    android:id="@+id/linearLayout_chat"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_effect"
   >





        <LinearLayout
            android:id="@+id/layout_gchat_container_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="45dp"
            android:background="@drawable/chatitembg_incoming_same"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:layout_margin="5dp"
                >

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/hregular"
                android:maxWidth="200dp"
                android:text="Hi hey how are yoOEIRJGOEIRJGEOIRJGOIJOIOIJOIJOJOIJOJOIJOIJOIIOIJOIJOIJ
                u !"
                android:textColor="@color/white200"
                android:textSize="@dimen/chat_incoming_outgoing_font_size" />


                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/hmed"
                    android:maxLines="1"
                    android:text="9:20 AM"
                    android:textColor="@color/s_grey"
                    android:textSize="10dp" />



            </LinearLayout>





        </LinearLayout>



</LinearLayout>