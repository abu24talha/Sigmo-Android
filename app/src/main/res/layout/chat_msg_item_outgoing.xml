<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:id="@+id/linearLayout_chat"
    android:clickable="true"
    android:focusable="true"

    android:gravity="end"
    android:foreground="@drawable/ripple_effect"
    android:layout_marginTop="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_gchat_message_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
       >

        <LinearLayout
            android:id="@+id/layout_gchat_container_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatitembg_outgoing"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_chatroom"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:maxWidth="260dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="You"
                android:textColor="@color/s_blue100"
                android:fontFamily="@font/hb"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="8dp"
                >

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/hmed"
                android:maxWidth="210dp"
                android:minWidth="60dp"
                android:text="Hikjhkjkjkjkjhkoijeoirjeeoijeorijgeeorijeorgi!"
                android:textColor="@color/white200"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="3dp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/ic_baseline_check_24"

                />



</LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>