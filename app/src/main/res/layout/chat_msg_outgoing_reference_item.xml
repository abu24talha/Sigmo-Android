<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout_chat"
    android:clickable="true"
    android:focusable="true"
    android:gravity="end"
    android:layout_margin="5dp"

    android:foreground="@drawable/ripple_effect"
    >

    <LinearLayout
        android:id="@+id/layout_gchat_container_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@drawable/chatitembg_outgoing"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:id="@+id/reference_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/dark_four_side_borders_post_grey_reg"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minWidth="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reference_to_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/hb"
                        android:text="Shaurya"
                        android:textColor="@color/s_blue"
                        android:textSize="13dp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/reference_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/hmed"
                    android:gravity="center_vertical"
                    android:maxWidth="260dp"
                    android:minWidth="160dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:text="Hreorijewoeijwoefowijewf"
                    android:textColor="#F3373737"
                    android:textSize="16dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#9CB9F4"
                    />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            >

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/hregular"
                android:maxWidth="260dp"
                android:minWidth="25dp"
                android:singleLine="false"
                android:layout_margin="2dp"
                android:text="wow"
                android:textColor="@color/white200"
                android:textSize="@dimen/chat_incoming_outgoing_font_size" >

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="3dp"
                >
                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/hmed"
                    android:layout_gravity="bottom"
                    android:text="9:20 AM"
                    android:textColor="@color/s_message_time_bg"
                    android:textSize="9dp" />




                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="bottom|end"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/ic_baseline_check_24"

                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>








</LinearLayout>