<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consLayoutAllMovies"
    android:layout_width="185dp"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/dark_four_side_borders_post"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:elevation="5dp"
    >
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <TextView
        android:id="@+id/profile_n"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:fontFamily="@font/hb"
        android:text="TenikaJr."
        android:gravity="center"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:textColor="@color/s_blue200"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />



            <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/poster"
        app:civ_border_width="2dp" android:layout_marginStart="23dp"
        app:civ_border_color="@color/white"
        app:srcCompat="@drawable/poster" />



    </LinearLayout>

    <Button
        android:id="@+id/follow_button"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/four_side_rounded_blue_more_rounder"
        android:fontFamily="@font/hxtrabold"

        android:gravity="center"
        android:text="+Connect"
        android:textColor="@color/white"
        android:textSize="8sp" />


</LinearLayout>