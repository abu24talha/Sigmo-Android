<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@drawable/gradient_overlay_minip"
    >




    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_margin="5dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:endIconTint="@color/white87"
            app:counterMaxLength="300"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/msgEditBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editbox_bg"
                android:fontFamily="@font/hregular"
                android:gravity="center_vertical"
                android:hint="Type your message here"
                android:inputType="textMultiLine"
                android:maxHeight="80dp"
                android:minHeight="45dp"
                android:padding="1dp"
                android:textColor="@color/white200"
                android:textColorHint="#E8BFBFBF"
                android:textSize="18sp"
                android:textStyle="normal"

                />

        </com.google.android.material.textfield.TextInputLayout>




        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/four_side_send_btn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/ic_baseline_send_24" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>






