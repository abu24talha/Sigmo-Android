<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mini_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#252525"
    android:elevation="1dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


    <LinearLayout

        android:id="@+id/linearLayout_ROOM"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"

       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cir_ROOM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1.6"
            android:padding="5dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/poster"
            app:civ_border_color="@color/white200"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.4"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:weightSum="10"
            >

            <TextView
                android:id="@+id/m_song_name_ROOM"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/hxtrabold"
                android:gravity="bottom"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:paddingStart="10dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:singleLine="true"
                android:text="Alag Asman"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@+id/mArtist_name_ROOM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/mArtist_name_ROOM"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/hmed"
                android:gravity="start"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:paddingStart="10dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:text="Anuv Jain"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />


        </LinearLayout>

        <ImageButton
            android:id="@+id/add_to_fav_ROOM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:scaleX="1.1"
            android:scaleY="1.1"

            android:src="@drawable/ic_heart" />


        <ImageButton
            android:id="@+id/playback_ROOM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:scaleX="1"
            android:scaleY="1.2"
            android:src="@drawable/ic_pause_eq" />

    </LinearLayout>

        <TextView
            android:id="@+id/jumpToTop"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/hmed"
            android:gravity="center"
            android:visibility="gone"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingStart="10dp"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:text="Tap to jump to top chat"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@color/purple_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



